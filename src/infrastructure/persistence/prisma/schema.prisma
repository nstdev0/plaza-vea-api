generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Product {
  // Usamos el SKU ID de VTEX como llave primaria porque es único
  skuId String @id

  // Campos indexados para búsquedas rápidas
  name       String
  searchName String
  ean        String?  @unique // Código de barras (puede ser nulo si no tiene)
  price      BigInt
  imageUrl   String?
  brand      String?
  category   String[]

  // Guardamos TODA la data original de VTEX aquí (backup)
  rawJson Json

  // Auditoría
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
